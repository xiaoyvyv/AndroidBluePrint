<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <stroke android:width="@dimen/ui_size_1" android:color="@color/ui_theme_c2" />
            <corners android:radius="@dimen/ui_layout_radius" />
            <padding android:bottom="@dimen/ui_size_10" android:left="@dimen/ui_size_40" android:right="@dimen/ui_size_40" android:top="@dimen/ui_size_10" />
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:width="@dimen/ui_size_1" android:color="@color/ui_theme_c1" />
            <corners android:radius="@dimen/ui_layout_radius" />
            <padding android:bottom="@dimen/ui_size_10" android:left="@dimen/ui_size_40" android:right="@dimen/ui_size_40" android:top="@dimen/ui_size_10" />
        </shape>
    </item>
</selector>